## The function is currently defined as
function (expt, y, onlyAcrossRegion = TRUE) 
{
    subj <- c()
    item <- c()
    cond <- c()
    outcomes <- c()
    for (i in 1:length(expt@trials)) {
        t <- expt@trials[[i]]
        outcome <- NA
        max.region <- -1
        previous.region <- -1
        for (j in 1:length(t@x)) {
            if (t@region[j] > y) 
                break
            if (j > 1 && previous.region == y && ((onlyAcrossRegion && 
                t@region[j] < y) || ((!onlyAcrossRegion) && t@x[j] < 
                t@x[j - 1]))) {
                outcome <- t@x[j - 1] - t@x[j]
                break
            }
            max.region <- max(max.region, t@region[j])
            previous.region <- t@region[j]
        }
        subj <- c(subj, t@subj)
        item <- c(item, t@item)
        cond <- c(cond, t@condition)
        outcomes <- c(outcomes, outcome)
    }
    result <- data.frame(subj = subj, item = item, cond = cond, 
        outcome = outcomes)
    return(result[do.call(order, result), ])
  }
}
